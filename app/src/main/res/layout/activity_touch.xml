<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.example.huzhikuan.list.activity.TouchActivity">
    <com.example.huzhikuan.list.MyLinearLayoutA
        android:id="@+id/Alayout"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:background="#000000">
        <com.example.huzhikuan.list.MyLinearLayoutB
            android:id="@+id/Blayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="50dp"
            android:background="#000aaa">
            <com.example.huzhikuan.list.MyLinearLayoutC
                android:id="@+id/Clayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="50dp"
                android:background="#660bbb">
                <com.example.huzhikuan.list.MyTextView
                    android:id="@+id/DTextview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="20dp"
                    android:text="abc"
                    android:textSize="30sp"
                    android:background="#444444"/>

            </com.example.huzhikuan.list.MyLinearLayoutC>
        </com.example.huzhikuan.list.MyLinearLayoutB>
    </com.example.huzhikuan.list.MyLinearLayoutA>

</LinearLayout>
